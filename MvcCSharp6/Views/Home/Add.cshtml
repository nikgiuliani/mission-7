@{
    ViewData["Title"] = "Add Movies";
}

@model MvcCSharp6.Models.MovieModel

<div>
    <h4> Add a new movie: </h4>
    <form method="post">
        <div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="categoryId"> Category: </label>
                <select id="rating" asp-for="categoryId" required>
                    <option value=""> Select a category </option>
                    @foreach (CategoryModel c in ViewBag.Categories)
                    {
                        <option value="@c.categoryId"> @c.categoryName </option>
                    }
                </select>
            </div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="title"> Title: </label>
                <input type="text" asp-for="title" required>
            </div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="year"> Year: </label>
                <input type="number" asp-for="year" required>
            </div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="director"> Director: </label>
                <input type="text" asp-for="director" required>
            </div>
            <div style="display: grid; grid-template-columns: 100px 100px;">
                <label asp-for="rating"> Rating: </label>
                <select id="rating" asp-for="rating" required>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="edited">Edited: </label>
                <select id="edited" asp-for="edited" required>
                    <option value="true">Yes</option>
                    <option value="false" selected="selected">No</option>
                </select>
            </div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="lentTo">Lent to: </label>
                <input type="text" asp-for="lentTo">
            </div>
            <div style="display: grid; grid-template-columns: 100px 130px;">
                <label asp-for="notes"> Notes: </label>
                <input type="text" asp-for="notes">
            </div>
            <div>
                <button type="submit"> Submit </button>
            </div>
        </div>
    </form>
</div>